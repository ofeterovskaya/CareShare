<div class="container vh-100 d-flex justify-content-center align-items-center overflow-hidden">
  <div class="card shadow col-md-4 col-lg-4">
    <div class="card-body">
      <h2 class="card-title text-center">Sign Up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <% if resource.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group mb-1">
          <%= f.label :first_name, class: 'form-label' %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>

        <div class="form-group mb-1">
          <%= f.label :last_name, class: 'form-label' %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>

        <div class="form-group mb-1">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="form-group mb-1">
          <%= f.label :password, class: 'form-label' %>
          <div class="input-group">
            <%= f.password_field :password, class: 'form-control', id: 'password' %>
            <div class="input-group-append">
              <button type="button" class="btn btn-outline-secondary" onclick="togglePasswordVisibility('password')">
                <i class="bi bi-eye"></i>
              </button>
            </div>
          </div>
        </div>

        <div class="form-group mb-1">
          <%= f.label :password_confirmation, class: 'form-label' %>
          <div class="input-group">
            <%= f.password_field :password_confirmation, class: 'form-control', id: 'password_confirmation' %>
            <div class="input-group-append">
              <button type="button" class="btn btn-outline-secondary" onclick="togglePasswordVisibility('password_confirmation')">
                <i class="bi bi-eye"></i>
              </button>
            </div>
          </div>
        </div>

        <div class="form-group mb-1">
          <%= f.label :role, class: 'form-label' %>
          <%= f.select :role, options_for_select([['Volunteer', 'volunteer'], ['Organization', 'organization']]), {}, class: 'form-select' %>
        </div>

        <div class="text-center mt-2">
          <%= f.submit "Sign up", class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  function togglePasswordVisibility(fieldId) {
    const passwordField = document.getElementById(fieldId);
    const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
    passwordField.setAttribute('type', type);
  }
</script>