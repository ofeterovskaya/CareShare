<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <p style="color: green"><%= notice %></p>
          <h1 class="card-title"><%= @organization.name %></h1>
          <p class="card-text"><strong>Description:</strong> <%= @organization.description %></p>
          <p class="card-text"><strong>Contact Email:</strong> <%= @organization.contact_email %></p>
          <p class="card-text"><strong>Location:</strong> <%= @organization.location %></p>
          <div class="d-flex justify-content-between mt-4">
            <%= link_to 'Back to organizations', organizations_path, class: 'btn btn-success' %>
            <% if user_signed_in? %>
              <div>
                <%= link_to 'Edit this organization', edit_organization_path(@organization), class: 'btn btn-outline-warning' %>
                <%= link_to 'Destroy this organization', @organization, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>