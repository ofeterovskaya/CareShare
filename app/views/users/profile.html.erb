<div class="container vh-100 d-flex justify-content-center align-items-center overflow-hidden">
  <div class="row w-100">
    <div class="col-md-4">
      <div class="card shadow">
        <div class="card-body text-center">
          <h3 class="card-title"><%= @user.first_name %> <%= @user.last_name %></h3>
          <div class="mb-3">
            <% if @user.avatar.attached? %>
              <img src="<%= url_for(@user.avatar) %>" class="rounded-circle img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;" alt="User Photo">
            <% else %>
              <img src="https://via.placeholder.com/150" class="rounded-circle img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;" alt="User Photo">
            <% end %>
          </div>
          <div class="d-inline-flex">
            <%= form_for @user, url: upload_avatar_user_path, html: { multipart: true }, method: :patch, class: 'd-inline' do |f| %>
              <div class="form-group d-inline">
                <%= f.file_field :avatar, class: 'form-control-file d-none', id: 'avatar_upload' %>
                <%= f.submit "Upload img", class: 'btn btn-outline-primary btn-sm', onclick: "document.getElementById('avatar_upload').click(); return false;" %>
              </div>
            <% end %>
            <%= link_to 'Edit Profile', user_profile_form_path, class: 'btn btn-primary btn-sm ms-2'%>
          </div>
          <p><%= @user.email %></p>
          <p><%= @user.role.capitalize %></p>
          <% if @user.about.present? %>
            <p><%= @user.about %></p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-body">
          <% if @user.role == 'volunteer' %>
            <h3 class="card-title">Applications</h3>
            <ul class="list-group">
              <% @applications.each do |application| %>
                <li class="list-group-item"><%= application.organization.name %> - <%= application.status %></li>
              <% end %>
            </ul>
          <% elsif @user.role == 'organization' %>
            <h3 class="card-title">Essential Needs</h3>
            <ul class="list-group">
              <% @applications.each do |need| %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <span><%= need.title %> - <%= need.description %></span>
                  <div>
                    <%= link_to 'Edit', edit_organization_need_assignment_path(need), class: 'btn btn-sm btn-warning' %>
                    <%= link_to 'Delete', organization_need_assignment_path(need), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
                  </div>
                </li>
              <% end %>
            </ul>
            <%= link_to 'Add New', new_organization_need_assignment_path, class: 'btn btn-primary mt-3' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.getElementById('avatar_upload').addEventListener('change', function() {
    console.log(this.files);  // Check if a file is selected
    this.form.submit();
  });
</script>